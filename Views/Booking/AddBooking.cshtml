@model oneHut.Models.BookingModel
<div style="width:100%; text-align: center;"> 
    <div style="width:100%; text-align: center;">
<table>
    <tr>
        <td class="width-100 text-left grid-header"><label>New Booking</label></td>
       
    </tr>
</table>
    </div>
    <div style="width:100%; text-align: center;">
       <table class="table table-bordered table-responsive table-hover">  
    <tr class="grid-background">  
        <th>Guest Name</th>  
        <th>Phone</th>  
        <th>Check-In </th>  
        <th>Check-Out</th>  
        <th>Rooms</th>  
        <th></th>  

    </tr>  
  
        <tr>  
            <td>@Html.TextBoxFor(m=>m.Book.GuestName)</td>   
            <td>@Html.TextBoxFor(m=>m.Book.Phone)</td>   
            <td>@Html.TextBoxFor(m=>m.Book.CheckIn, new{@class="width-80px"})</td>   
            <td>@Html.TextBoxFor(m=>m.Book.CheckOut,new{@class="width-80px"})</td>   
            <td>@Html.TextBoxFor(m=>m.Book.Rooms,new{@class="width-50px"})</td> 
            <td><button class="button-blue">Book</button><button class="button-blue">Cancel</button></td> 

        </tr>  

</table>
</div>
