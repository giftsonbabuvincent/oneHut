@model oneHut.Models.BookingModel
<div style="width:100%; text-align: center;"> 
    <div style="width:100%; text-align: center;">
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            @if (Model.Message.ToLower().Contains("success"))
                     {<div class="bar success text-align-center">@Html.Label(Model.Message)</div>}
        }
<table>
    <tr>
        <td class="width-100 text-left grid-header"><label>Bookings</label></td>
    </tr>
</table>
    </div>
    <div style="width:100%; text-align: center;">
        
       <table class="table table-bordered table-responsive table-hover">  
    <tr class="grid-background">  
        <th>No.</th>  
        <th>Guest Name</th>  
        <th>Phone</th>  
        <th>Check-In</th>  
        <th>Check-Out</th>  
        <th>Rooms</th>  
        <th>Status</th>  
        <th></th>  

    </tr>  
    @foreach (var usr in Model.Bookings)  
    {  
        <tr>  
            <td>@usr.No</td>  
            <td class="text-align-left">@usr.GuestName</td>   
            <td><a href="">@usr.Phone</a></td>   
            <td>@usr.CheckIn</td>   
            <td> @if (!@usr.Status.Equals("Booked"))
            {@usr.CheckOut}</td>   
            <td>@usr.Rooms</td> 
            @if (@usr.Status.Equals("Cancelled"))
            {
                <td class="font-color-red">@usr.Status</td> 
            } 
             @if (@usr.Status.Equals("Stayed"))
            {
                <td class="font-color-green">@usr.Status</td> 
            } 
             @if (@usr.Status.Equals("Booked"))
            {
                <td class="font-color-darkblue">@usr.Status</td> 
            }  
              
            <td>
            @if (@usr.Status.Equals("Booked"))
            {
                <div class="width-120px">

                <a href="/Booking/CheckinBooking?id=@usr._id.Trim()">
                <img src="~/Images/CheckinBlue2.jpg"  style="width:32%" title="Check in"></a>

                <a href="/Booking/CheckoutBooking?id=@usr._id.Trim()">
                <img src="~/Images/CheckOutGreen1.jpg" style="width:28%" title="Check out"></a>

                <a href="/Booking/CancelBooking?id=@usr._id.Trim()">
                <img src="~/Images/Cancel.jpg" style="width:28%" title="Cancel Booking"></a>

                </div>
            }
            </td>   
  
        </tr>  
    }  
</table>

</div>
    </div> 