@model oneHut.Models.BookingModel
@{
    ViewData["Title"] = "Booking Page";
}

<div style="width:100%; text-align: center;"> 
    <div style="width:100%; text-align: center;">
<table>
    <tr>
        <td class="width-100 text-left grid-header"><label>Bookings</label></td>
        <td><button class="button-blue">Book</button></td>
    </tr>
</table>
    </div>
    <div style="width:100%; text-align: center;">
       <table class="table table-bordered table-responsive table-hover">  
    <tr class="grid-background">  
        <th>No.</th>  
        <th>Guest Name</th>  
        <th>Phone</th>  
        <th>Check-In</th>  
        <th>Check-Out</th>  
        <th>Rooms</th>  
        <th>Status</th>  
        <th></th>  

    </tr>  
    @foreach (var usr in Model.Bookings)  
    {  
        <tr>  
            <td>@usr.No</td>  
            <td class="text-align-left">@usr.GuestName</td>   
            <td><a href="">@usr.Phone</a></td>   
            <td>@usr.CheckIn</td>   
            <td>@usr.CheckOut</td>   
            <td>@usr.Rooms</td> 
            @if (@usr.Status.Equals("Cancelled"))
            {
                <td class="font-color-red">@usr.Status</td> 
            } 
             @if (@usr.Status.Equals("Stayed"))
            {
                <td class="font-color-green">@usr.Status</td> 
            } 
             @if (@usr.Status.Equals("Booked"))
            {
                <td class="font-color-darkblue">@usr.Status</td> 
            }  
              
            <td>
            @if (@usr.Status.Equals("Booked"))
            {
                <a href="">Cancel</a><label> / </label><a href="">Stayed</a>
            }
            </td>   
  
        </tr>  
    }  
</table>
</div>
    </div> 
